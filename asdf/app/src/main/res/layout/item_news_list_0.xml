<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:paddingRight="@dimen/dim_12"
>
    <ImageView
        android:id="@+id/main_image_path"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
    />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/main_image_path"
        android:layout_marginLeft="@dimen/dim_12"
        android:layout_marginTop="@dimen/dim_16"
        android:textSize="@dimen/dim_14"
        android:textColor="#ff0000"
    />
    <com.dpcsa.compon.custom_components.ComponTextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/title"
        android:layout_marginLeft="@dimen/dim_12"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/dim_12"
        android:textSize="@dimen/dim_12"
        app:dateFormat="dd.MM.yyyy"
    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_alignParentBottom="true"
    />
</RelativeLayout>